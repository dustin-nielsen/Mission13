@{
}

@model IEnumerable<Team>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-teamID=0 asp-route-teamName="" class="btn btn-outline-secondary">Home</a>
    <br />

    @foreach (Team t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamID="@t.TeamID" asp-route-teamName="@t.TeamName"
            class="btn @(ViewBag.SelectedTeamID == t.TeamID.ToString() ? "btn-primary" : "btn-outline-secondary")">@t.TeamName</a>
        <br />
    }
</div>
